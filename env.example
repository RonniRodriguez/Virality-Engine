# Idea Inc - Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# Application
# =============================================================================
ENV=development
DEBUG=true
SECRET_KEY=CHANGE-THIS-IN-PRODUCTION-use-openssl-rand-hex-32

# =============================================================================
# OAuth2 Providers (optional for MVP)
# =============================================================================
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=http://localhost:8000/api/v1/auth/callback/google

GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GITHUB_REDIRECT_URI=http://localhost:8000/api/v1/auth/callback/github

# =============================================================================
# PostgreSQL
# =============================================================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=ideainc
POSTGRES_PASSWORD=ideainc
POSTGRES_DB=ideainc
POSTGRES_SSL=false

# =============================================================================
# MongoDB
# =============================================================================
MONGODB_HOST=localhost
MONGODB_PORT=27017
MONGODB_USER=
MONGODB_PASSWORD=
MONGODB_DB=ideainc

# =============================================================================
# Redis
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# =============================================================================
# Kafka (disabled for MVP)
# =============================================================================
KAFKA_ENABLED=false
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_CONSUMER_GROUP=ideainc

# =============================================================================
# ChromaDB (Vector Database)
# =============================================================================
CHROMA_HOST=localhost
CHROMA_PORT=8001
CHROMA_PERSIST_DIR=./data/chroma

# =============================================================================
# AI / LLM (optional for MVP)
# =============================================================================
LLM_ENABLED=false
OPENAI_API_KEY=
OPENAI_MODEL=gpt-3.5-turbo

# =============================================================================
# Observability
# =============================================================================
OTEL_ENABLED=false
OTEL_SERVICE_NAME=ideainc
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317

METRICS_ENABLED=true
METRICS_PORT=9090

LOG_LEVEL=INFO
LOG_FORMAT=text

# =============================================================================
# Simulation Defaults
# =============================================================================
DEFAULT_POPULATION_SIZE=10000
SIMULATION_TICK_MS=100
MAX_CONCURRENT_WORLDS=10

